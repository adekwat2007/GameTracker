<Application x:Class="GameTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GameTracker"
             xmlns:vm="clr-namespace:GameTracker.ViewModels"
             xmlns:v="clr-namespace:GameTracker.Views">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LibraryViewModel}">
            <v:LibraryPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AddGameViewModel}">
            <v:AddGamePage />
        </DataTemplate>

    </Application.Resources>
</Application>